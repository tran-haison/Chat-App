<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragments.NetworkUserFragment">

    <ListView
        android:id="@+id/lvNetworkUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@color/white"
        android:dividerHeight="0dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llUserPrompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavUser"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/margin_vertical"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:fontFamily="@font/poppins"
            android:text="@string/no_one_has_joined_this_network_yet"
            android:textAlignment="center"
            android:textColor="@color/colorLightBlack" />

    </LinearLayout>
</RelativeLayout>