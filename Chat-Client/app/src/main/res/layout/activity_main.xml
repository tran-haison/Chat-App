<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_toStartOf="@id/ivUserAva"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_tool_bar" />

        <ImageView
            android:id="@+id/ivUserAva"
            android:layout_width="@dimen/iv_size"
            android:layout_height="@dimen/iv_size"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tvUsername"
            android:contentDescription="@string/username"
            android:src="@drawable/ic_user" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/padding_horizontal"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/username"
            android:textColor="@color/colorLightBlack" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlToolbar"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/margin_vertical"
        app:cardBackgroundColor="@color/colorLightGray"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableStart="@drawable/ic_round_search_24"
            android:drawablePadding="@dimen/padding_horizontal"
            android:drawableTint="@color/colorGray"
            android:fontFamily="@font/poppins"
            android:hint="@string/search_friend"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_default"
            tools:targetApi="m" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>